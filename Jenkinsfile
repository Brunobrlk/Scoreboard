pipeline {
    agent any
    stages {
        stage("lint"){
            steps {
                echo 'Lint check...'
            }
        }
        
        stage("unit-test"){
            steps {
                echo 'Running unit tests...'
            }
        }

        stage("integration-test"){
            steps {
                echo 'Running integration tests...'
            }
        }
        
        stage("build"){
            steps {
                echo 'Building the app...'
            }
        }

        stage("deploy-to-playstore"){
            steps {
                echo 'building the app...'
            }
        }
    }
}
