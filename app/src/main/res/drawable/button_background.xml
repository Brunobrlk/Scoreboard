<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Gray background with lower opacity -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#33000000"/> <!-- Gray color with 20% opacity -->
        <corners android:radius="8dp" /> <!-- Optional: adjust corner radius if needed -->
    </shape>
</item>

<!-- Black border -->
<item>
    <shape android:shape="rectangle">
        <stroke
            android:width="2dp"
            android:color="#FF000000" /> <!-- Black color -->
        <corners android:radius="8dp" /> <!-- Match corner radius with background -->
    </shape>
</item>
</layer-list>